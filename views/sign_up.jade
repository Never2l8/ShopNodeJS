extends layout

block content

    .container
         form(action='/sign_up/process', method='get').col.s12
             fieldset
                    legend Sign Up:
                    .input-field.col.s12
                        input#email(type='email' name='email' required=true)
                        label(for='email') Email
                    .input-field.col.s12
                        input#password(type='password' name='password' required=true)
                        label(for='password') Password
                    .input-field.col.s12
                        input#repeat_password(type='password' name='repeat_password' required=true)
                        label(for='repeat_password') Repeat Password
                    p
                        input#remember_me(type='checkbox', checked='checked')
                        label(for='remember_me') Remember Me
                            p
                                | By creating an account you agree to our
                                a(href='#') Terms & Privacy
                                | .
                            .clearfix
                                button.signupbtn(type='submit') Sign Up
                                button.cancelbtn(type='button') Cancel






